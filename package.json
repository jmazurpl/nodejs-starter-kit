{
  "name": "node-api-starter",
  "version": "1.0.0",
  "author": "Jan Mazur",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node build/server.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "moment": "^2.29.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^3.14.1",
    "typeorm": "^0.3.6",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.24",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/winston": "^2.4.4",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "routes.ts",
      "swagger.json"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  }
}
